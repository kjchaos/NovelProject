}
.navFixed {
  position: fixed;
  background-color: #F5F5F5;
  top: 5rpx;
  z-index: 999;
}
.content {
  padding: 20rpx;
}
.content .navCardBottom,
  .content .navCardTop {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
