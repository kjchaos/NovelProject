    .content .navCardTop uni-navigator:nth-child(1) .topNav {
      background-color: #DDE8F4;
}
.content .navCardBottom uni-navigator:nth-child(2) .topNav,
    .content .navCardTop uni-navigator:nth-child(2) .topNav {
      background-color: #E5E9F5;
}
