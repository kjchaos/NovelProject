      padding-left: 26rpx;
      margin-bottom: 12rpx;
}
.content .navCardBottom .topNav ._img,
      .content .navCardTop .topNav ._img {
        width: 130rpx;
        height: 120rpx;
        margin-right: 8rpx;
}
.content .navCardBottom ._h3,
    .content .navCardTop ._h3 {
      font-size: 38rpx;
      font-weight: 600;
      line-height: 60rpx;
      margin-top: 10rpx;
}
